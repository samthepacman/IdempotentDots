                )

                (box    :orientation "h"
                        :class "metric-disk"
                        :space-evenly false
                        (label  :text "EXT"
                                :class "metric-lable pink")
                        (scale  :min 0
                                :max 101
                                :active "false"
                                :value {round((1 - (EWW_DISK["/run/media/jkcachero/72C0E160C0E12AD5"].free / EWW_DISK["/run/media/jkcachero/72C0E160C0E12AD5"].total)) * 100, 0)})
                )

                (box    :orientation "h"
                        :class "metric-root"
                        :space-evenly false
                        (label  :text "WIN"
                                :class "metric-lable green")
                        (scale  :min 0
                                :max 101
                                :active "false"
