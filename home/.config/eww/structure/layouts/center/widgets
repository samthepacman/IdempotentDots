(defwidget systemWidget []
        (box    :orientation "v"
                :class "system"
                :space-evenly false
                :spacing 10;
                :valign "center"
                :halign "center"

                (box    :orientation "h"
                        :class "metric-vol"
                        :space-evenly false
                        (label  :text "VOL"
                                :class "metric-lable purple")
                        (scale  :min 0
                                :max 101
                                :active "true"
                                :value "${vol}"
                                :onchange "amixer -D pulse sset Master {}%")
                )

                (box    :orientation "h"
                        :class "metric-root"
                        :space-evenly false
                        (label  :text "DSK"
                                :class "metric-lable blue")
                        (scale  :min 0
                                :max 101
                                :active "false"
