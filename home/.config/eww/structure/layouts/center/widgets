;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;         PLAYER WIDGET        ;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

(defwidget playerWidgets []
        (box    :orientation "v"
                :space-evenly false
                :halign "center"
                :valign "center"
                :spacing "10"
                (image  :path "${imgCover}"
                        :width "150"
                        :height "150")

                (box    :orientation "v"
                        :space-evenly false
                        :halign "center"
                        :spacing "5"

                        (box    :orientation "v"
                                :space-evenly false
                                :halign "center"
                                :spacing "5"

                                (label  :class "artist purple"
                                        :text {artist != "" ? "${artist}" : "No Artist"})

                                (label  :class "song blue"
                                        :text {song != "" ? "${song}" : "Not playing"})
                        )

                        (box    :class "control pink"
                                :orientation "h"
                                :space-evenly true
                                :spacing "20"
                                (button :onclick "playerctl previous" "丹")
                                (button :onclick "playerctl play-pause" "${playpause}")
                                (button :onclick "playerctl next" "")
                        )
                )

                (box    :orientation "h"
                        :class "metric-player-center"

                        (scale  :min 0
                                :max 101
                                :active "false"
                                :value {songtime != "" ? "${songtime}" : "0"}
                        )
                )
        )
)

